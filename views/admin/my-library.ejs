                        <div class="card_content">
                            <p><%= game.category %></p>
                            <p class="description"><%= game.description %></p>
                        </div>
                        <div class="one-button button-container">
                            <a href="/edit-item/<%= game.id %>/game?edit=true"" class="details-btn btn">Edit</a>
