<%- include('../includes/head.ejs') %>
<script src="https://kit.fontawesome.com/c9ac847ddd.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../includes/nav.ejs') %>
<main>
    <h1>My Library</h1>
    <section class="grid">
        <h2>Books</h2>
        
    <% if (books.length > 0) { %>
        <div class="card-container">
                <% for (let book of books) { %>
                    <article class="card<% if(user.bookLib.favorites.includes(book.id)){ %> favorite <% } %>">
                        <h3 class="title"><%= book.title %></h3>
                        <div class="favorite-star">
                            <% if(user.bookLib.favorites.includes(book.id)){ %> 
                                <i class="fas fa-star"></i> 
                            <% } else { %>
                                <i class="far fa-star"></i>
                            <% } %>
                        </div>
                        <img src="/images/<%= book.imageUrl %>" alt="Image of <%= book.title %>">
                        <div class="card_content">
                            <p><%= book.author %></p>
                            <p><%= book.genre %></p>
                            <p class="description"><%= book.description %></p>
                        </div>
                        <div class="one-button button-container">
                            <a href="/edit-item/<%= book.id %>/book?edit=true" class="details-btn btn">Edit</a>
                            <form action="/admin/delete-book" method="POST">
                                <input type="hidden" value="<%= book.id %>" name="bookId">
                                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                                <button class="delete-btn btn" type="submit">Delete</button>
                            </form>
                            <!-- <a href="/add-favorite/<%= book.id %>/book" class="details-btn btn">Add to Favorites</a> -->
                            <form action="/add-favorite" method="POST">
                                <input type="hidden" value="<%= book.id %>" name="id">
                                <input type="hidden" value="book" name="itemType">
                                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                                <button class="delete-btn btn" type="submit"><% if(user.bookLib.favorites.includes(book.id)){ %> Unfavorite <% } else { %>Favorite<% } %></button>
                            </form>
                        </div>
                        
                        
                        
                    </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Books Found</h1>
    <% } %>
    </section>

    <section class="grid">
        <h2>Movies</h2>
        
