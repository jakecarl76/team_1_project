                        <div class="card_content">
                            <p><%= movie.rating %></p>
                            <p><%= movie.genre %></p>
                            <p class="description"><%= movie.description %></p>
                        </div>
                        <div class="one-button button-container">
                            <a href="/edit-item/<%= movie.id %>/movie?edit=true"" class="details-btn btn">Edit</a>
                            <form action="/admin/delete-movie" method="POST">
                                <input class="btn" type="hidden" value="<%= movie.id %>" name="movieId">
                                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                                <button class="delete-btn btn" type="submit">Delete</button>
                            </form>
                            <!-- <a href="/add-favorite/<%= movie.id %>/movie" class="details-btn btn">Add to Favorites</a> -->
                            <form action="/add-favorite" method="POST">
                                <input class="btn" type="hidden" value="<%= movie.id %>" name="id">
                                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                                <input type="hidden" value="movie" name="itemType">
                                <button class="delete-btn btn" type="submit"><% if(user.movieLib.favorites.includes(movie.id)){ %> Unfavorite <% } else { %>Favorite<% } %></button>
                            </form>
                        </div>
                    </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Movies Found</h1>
    <% } %>
    </section>

    <section class="grid">
        <h2>Games</h2>
        
    <% if (games.length > 0) { %>
        <div class="card-container">
                <% for (let game of games) { %>
                    <article class="card<% if(user.gameLib.favorites.includes(game.id)){ %> favorite <% } %>">
