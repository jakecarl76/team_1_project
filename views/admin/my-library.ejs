                                <input class="btn" type="hidden" value="<%= game.id %>" name="id">
                                <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                                <input type="hidden" value="game" name="itemType">
                                <button class="delete-btn btn" type="submit"><% if(user.gameLib.favorites.includes(game.id)){ %> Unfavorite <% } else { %>Favorite<% } %></button>
                            </form>

                        </div>
                    </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Games Found</h1>
    <% } %>
    </section>
</main>
