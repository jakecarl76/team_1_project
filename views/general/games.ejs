<%- include('../includes/head.ejs') %>
<body>
      <%- include('../includes/nav.ejs') %>
   <main>
      <h1>Hermit Habitat's Board Games</h1>

      <% if (content) { %>
      <div class="content-cards">
      <% for (let item of content) { %>
         <a href="/details/<%= item._id %>?type=game"><div class="content-card">
               <div class="left">
               <img class="content-card-image" src="images/<%= item.imageUrl %>" alt="<%= item.title %>">
               </div>
               <div class="right">
               <h2><%= item.title %></h2>
               <h3><%= item.category %></h3>
               
               <%if(user){%>
               <form action="/adjust-library" method="POST">
                  <input type="hidden" value="<%= item.id %>" name="itemId">
                  <input type="hidden" value="game" name="itemType">
                  <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                  <button class="delete-btn btn" type="submit"><% if(user.gameLib.lib.includes(item.id)){ %>Remove from Library<% } else { %>Add to Library <% } %></button>
              </form>
              <% } %>
            </div>
            </div>
            </a>
         <% } %> 
         <section class="pagination">
            <% if(currentPage !== 1) { %>
               <a href="/movies/?page=1" id="page1">1</a>
            <% } %>
            
            <a href="/movies/?page=<%= currentPage %>" class="active" id="currentpage"><%= currentPage %></a>
            
            <% if(hasNextPage) { %>
            <a href="/movies/?page=<%= nextPage %>" id="nextPage"><%= nextPage %></a>
            <% } %>

            <% if(lastPage !== currentPage && nextPage !== lastPage) { %>
            <a href="/movies/?page=<%= lastPage %>" id="lastpage"><%= lastPage %></a>
            <% } %>
         </section> 
      </div>
      <% } else { %>
         <img class="hermit-nothing" src="images/hermit.png" alt="Hermit Crab">
         <h2>Whoops! Looks like we have nothing here!</h2>
      <% } %> 

      <%- include('../includes/toTop.ejs') %>
      
   </main>
   <%- include('../includes/end.ejs') %>
</body>
</html>